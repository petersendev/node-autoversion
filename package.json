{
    "name": "node-autoversion",
    "version": "0.0.1",
    "main": "dist/index.js",
    "repository": "https://github.com/petersendev/node-autoversion.git",
    "author": "Arne Petersen <arne@petersen.pro>",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf dist/*",
        "build": "yarn run clean && yarn run tsc",
        "tsc": "tsc --pretty --outDir dist",
        "test": "yarn run build && yarn run testOnly",
        "testOnly": "jest",
        "coverage": "jest --coverage",
        "postcoverage": "node ./tools/process-coverage-report.js"
    },
    "devDependencies": {
        "@types/execa": "^0.9.0",
        "@types/jest": "^23.1.0",
        "@types/node": "^10.3.3",
        "@types/tempy": "^0.1.0",
        "jest": "^22.4.4",
        "jest-junit": "^5.0.0",
        "rimraf": "^2.6.2",
        "tempy": "^0.2.1",
        "ts-jest": "^22.4.6",
        "ts-node": "^6.1.1",
        "typescript": "^2.9.2",
        "vsts-coverage-styles": "^1.0.7"
    },
    "jest": {
        "transform": {
            ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/tests/unit/.*|\\.(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "testEnvironment": "node",
        "reporters": [
            "jest-junit"
        ],
        "coverageReporters": [
            "text",
            "lcov",
            "cobertura"
        ]
    },
    "jest-junit": {
        "output": "./test-results/junit.xml"
    },
    "dependencies": {
        "execa": "^0.10.0"
    }
}
